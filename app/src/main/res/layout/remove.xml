<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_uri"
        android:layout_width="381dp"
        android:layout_height="47dp"
        android:layout_marginTop="28dp"
        android:hint="Uri dowload"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/image_remove"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/image_remove"
        app:layout_constraintTop_toBottomOf="@+id/image_remove" />

    <Button
        android:id="@+id/btn_remove"
        android:layout_width="203dp"
        android:layout_height="61dp"
        android:layout_marginTop="48dp"
        android:text="Remove"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_uri"
        app:layout_constraintStart_toStartOf="@+id/tv_uri"
        app:layout_constraintTop_toBottomOf="@+id/tv_uri" />

    <ImageView
        android:id="@+id/image_remove"
        android:layout_width="192dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>